<!-- JQUERY AND ASSOCIATED SCRIPTS ------------------------------------------------------------------------------------------------- -->	


    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
    
    <script>
		
	
	$(document).ready(function(){
		$('#pag').hide();
		$('#0').click(function (){
		
			$('#content').load('chapterone-1.html');
			$('ul li').eq(1).css('background-color', 'white');
			$('ul li').eq(0).css('background-color', '#e8e38e');
			$('#pag').show();
			$('ul.pagination li').eq(0).addClass('active');
			$('ul.pagination li').eq(1).removeClass('active');
		
		});
		
		$('ul.pagination li').click(function(){
			$('ul.pagination li').eq(0).removeClass('active');
			$('ul.pagination li').eq(1).addClass('active');
			$('ul li').eq(0).css('background-color', 'white');
			$('ul li').eq(1).css('background-color', '#e8e38e');
		});		
		
		$('#1').click(function (){
		
			$('#content').load('chapter1-2.html');
			$('ul li').eq(0).css('background-color', 'white');
			$('ul li').eq(1).css('background-color', '#e8e38e');
			$('ul.pagination li').eq(0).addClass('active');
			$('ul.pagination li').eq(1).removeClass('active');
		
		
			});
		
		$('#c1-2').click(function (){
		
			$('#content').load('chapter1-2.html');
			$('ul li').eq(1).css('background-color', 'white');
			$('ul li').eq(0).css('background-color', '#e8e38e');
			$('ul.pagination li').eq(0).addClass('active');
			$('ul.pagination li').eq(1).removeClass('active');
			$('#pag').show();
		
		});		
		
	});
		
		
		</script>
	
